{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SimplyTerm",
  "version": "0.3.1",
  "identifier": "com.simplyterm.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "SimplyTerm",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 12,
          "y": 22
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDEzMzZDODNDOUU3MEVCOUEKUldTYTYzQ2VQTWcyRThYWnk1OGdWUDRNYWdHZmRlWnBnamZVL2RQWCtFR3BKa2hJZkNWVmR1OTQK",
      "endpoints": [
        "https://github.com/arediss/SimplyTerm/releases/latest/download/latest.json"
      ]
    }
  }
}
